FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY tools/symbiose_unified_api.py ./symbiose_unified_api.py
COPY semantic-search-index.json ./semantic-search-index.json

RUN pip install --upgrade pip && \
    pip install fastapi uvicorn[standard] neo4j-driver qdrant-client pydantic numpy

EXPOSE 8082

CMD ["uvicorn", "symbiose_unified_api:app", "--host", "0.0.0.0", "--port", "8082"]
