# EFC_vs_LCDM.ipynb

# 1️⃣ Importer kjernen
from src.efc_core import EFCCore

# 2️⃣ Sett opp starttilstand
initial_state = {'S': 0.1, 'E': 1.0}

model = EFCCore(initial_state)

# 3️⃣ Kjør simulering over tid
results = []
for t in range(100):
    state = model.step(dt=0.01)
    results.append((t, state['S'], state['Ef']))

# 4️⃣ Visualiser
import matplotlib.pyplot as plt

time, S_vals, Ef_vals = zip(*results)
plt.plot(time, S_vals, label="Entropy (S)")
plt.plot(time, Ef_vals, label="Energy Flow (Ef)")
plt.xlabel("Time (arbitrary units)")
plt.ylabel("Value")
plt.legend()
plt.title("EFC Simulation – Entropy and Energy Flow over Time")
plt.show()
